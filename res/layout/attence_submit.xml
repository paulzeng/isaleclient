<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/v2_background" >

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/rl_button" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="6dip"
                    android:layout_marginRight="6dip"
                    android:layout_marginTop="4dip"
                    android:background="@color/white" >

                    <RelativeLayout
                        android:id="@+id/rl_userinfo"
                        android:layout_width="fill_parent"
                        android:layout_height="50dip"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip" >

                        <TextView
                            android:id="@+id/tv_username"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginRight="10.0dip"
                            android:gravity="center_vertical"
                            android:textColor="#FF000000"
                            android:textSize="@dimen/textSize_32pt" />

                        <View
                            android:layout_width="325dp"
                            android:layout_height="0.5dp"
                            android:layout_alignParentBottom="true"
                            android:background="@color/v2_gray_e2e2e2" >
                        </View>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_date"
                        android:layout_width="fill_parent"
                        android:layout_height="50dip"
                        android:layout_below="@+id/rl_userinfo"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip" >

                        <TextView
                            android:id="@+id/tv_date"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginRight="10.0dip"
                            android:gravity="center_vertical"
                            android:textColor="#FF000000"
                            android:textSize="@dimen/textSize_32pt" />

                        <View
                            android:layout_width="325dp"
                            android:layout_height="0.5dp"
                            android:layout_alignParentBottom="true"
                            android:background="@color/v2_gray_e2e2e2" >
                        </View>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_time"
                        android:layout_width="fill_parent"
                        android:layout_height="50dip"
                        android:layout_below="@+id/rl_date"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip" >

                        <TextView
                            android:id="@+id/tv_time"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginRight="10.0dip"
                            android:gravity="center_vertical"
                            android:textColor="#FF000000"
                            android:textSize="@dimen/textSize_32pt" />

                        <View
                            android:layout_width="325dp"
                            android:layout_height="0.5dp"
                            android:layout_alignParentBottom="true"
                            android:background="@color/v2_gray_e2e2e2" >
                        </View>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_type"
                        android:layout_width="fill_parent"
                        android:layout_height="38dip"
                        android:layout_below="@+id/rl_time"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:visibility="gone" >

                        <TextView
                            android:id="@+id/tv_lbtype"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="10.0dip"
                            android:gravity="center_vertical"
                            android:text="@string/attence_type"
                            android:textColor="#FF000000"
                            android:textSize="@dimen/textSize_32pt" />

                        <TextView
                            android:id="@+id/tv_type"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginRight="10.0dip"
                            android:layout_toRightOf="@+id/tv_lbtype"
                            android:gravity="center_vertical"
                            android:textColor="#FF000000"
                            android:textSize="15sp" />

                        <View
                            android:layout_width="325dp"
                            android:layout_height="0.5dp"
                            android:layout_alignParentBottom="true"
                            android:background="@color/v2_gray_bbbbbb" >
                        </View>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_result"
                        android:layout_width="fill_parent"
                        android:layout_height="38dip"
                        android:layout_below="@+id/rl_type"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:visibility="gone" >

                        <TextView
                            android:id="@+id/tv_lbresult"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="10.0dip"
                            android:gravity="center_vertical"
                            android:text="@string/attence_result"
                            android:textColor="#FF000000"
                            android:textSize="@dimen/textSize_32pt" />

                        <TextView
                            android:id="@+id/tv_result"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginRight="10.0dip"
                            android:layout_toRightOf="@+id/tv_lbresult"
                            android:gravity="center_vertical"
                            android:textColor="#FF000000"
                            android:textSize="@dimen/textSize_32pt" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_address"
                        android:layout_width="fill_parent"
                        android:layout_height="50dip"
                        android:layout_below="@+id/rl_time"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip" >

                        <TextView
                            android:id="@+id/tv_address"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginRight="10.0dip"
                            android:gravity="center_vertical"
                            android:textColor="#FF000000"
                            android:text="正在定位中..."
                            android:textSize="@dimen/textSize_32pt" />
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_button"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp" >

            <Button
                android:id="@+id/btn_check"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:background="@drawable/v2_btn_common"
                android:text="@string/attence_signin"
                android:textColor="#FFFFFFFF"
                android:textSize="15sp"
                android:textStyle="normal" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>