<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/v2_background"
    android:orientation="vertical">

    <com.zjrc.isale.client.ui.widgets.pulltorefreshview.PullToRefreshListView
        android:id="@+id/lv_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/v2_text_white"
        android:cacheColorHint="#00000000"
        android:clickable="true"
        android:divider="@null"
        android:listSelector="@drawable/v2_list_item_selector" />

    <include
        android:id="@+id/ll_listview_foreground"
        layout="@layout/listview_foreground"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone" />

</LinearLayout>