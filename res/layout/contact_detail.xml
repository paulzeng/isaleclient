<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/v2_text_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/v2_background_contact"
        android:orientation="horizontal"
        android:paddingLeft="22dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="29dp"
            android:layout_marginTop="29dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_contactimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/v2_contact_head" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_contactname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:shadowColor="@color/v2_text_shadow"
                    android:shadowDx="5"
                    android:shadowDy="5"
                    android:shadowRadius="5"
                    android:textColor="@color/v2_text_white"
                    android:textSize="@dimen/textSize_34pt" />

                <TextView
                    android:id="@+id/tv_contactphoneno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/v2_text_light_grey"
                    android:textSize="@dimen/textSize_30pt" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/v2_icon_deptment"
            android:drawablePadding="6dp"
            android:gravity="center_vertical"
            android:text="部门"
            android:textColor="@color/v2_text_grey"
            android:textSize="@dimen/textSize_30pt" />

        <TextView
            android:id="@+id/tv_dept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29dp"
            android:gravity="center_vertical"
            android:textColor="@color/v2_text"
            android:textSize="@dimen/textSize_30pt" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/divider_1px"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/v2_divider_light" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/v2_icon_user_type"
            android:drawablePadding="6dp"
            android:gravity="center_vertical"
            android:text="类型"
            android:textColor="@color/v2_text_grey"
            android:textSize="@dimen/textSize_30pt" />

        <TextView
            android:id="@+id/tv_usertype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29dp"
            android:gravity="center_vertical"
            android:textColor="@color/v2_text"
            android:textSize="@dimen/textSize_30pt" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/divider_1px"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/v2_divider_light" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/v2_list_item_selector"
            android:src="@drawable/v2_icon_message" />

        <TextView
            android:layout_width="@dimen/divider_1px"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:background="@color/v2_divider_light" />

        <ImageView
            android:id="@+id/iv_call"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/v2_list_item_selector"
            android:src="@drawable/v2_icon_call" />

        <TextView
            android:layout_width="@dimen/divider_1px"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:background="@color/v2_divider_light"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_ctd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/v2_icon_ctd"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/divider_1px"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/v2_divider_light" />

</LinearLayout>