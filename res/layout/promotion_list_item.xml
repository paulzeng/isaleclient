<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="4dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:background="@drawable/v2_list_item_selector_white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="25dp"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="起"
            android:textColor="#ff85bd00"
            android:textSize="@dimen/textSize_24pt" />

        <TextView
            android:layout_width="@dimen/divider_1px"
            android:layout_height="fill_parent"
            android:background="#ffebebeb" />

        <TextView
            android:id="@+id/tv_begindate"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="2014-08-24"
            android:textColor="#ff888888"
            android:textSize="@dimen/textSize_24pt" />

        <TextView
            android:layout_width="@dimen/divider_1px"
            android:layout_height="fill_parent"
            android:background="#ffebebeb" />

        <TextView
            android:layout_width="25dp"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="止"
            android:textColor="#fffb555a"
            android:textSize="@dimen/textSize_24pt" />

        <TextView
            android:layout_width="@dimen/divider_1px"
            android:layout_height="fill_parent"
            android:background="#ffebebeb" />

        <TextView
            android:id="@+id/tv_enddate"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="2014-08-30"
            android:textColor="#ff888888"
            android:textSize="@dimen/textSize_24pt" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/divider_1px"
        android:background="#ffebebeb" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/v2_list_item_selector_white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_terminalname"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:singleLine="true"
            android:text="世纪联华商店"
            android:textColor="#ff353535"
            android:textSize="@dimen/textSize_32pt" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/divider_1px"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#ffebebeb" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_promotiondesc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:text="高露洁电动牙刷"
                android:textColor="#ff888888"
                android:textSize="@dimen/textSize_30pt" />

            <TextView
                android:id="@+id/tv_promotionprice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/v2_icon_money"
                android:gravity="center_vertical"
                android:text="15.00元"
                android:textColor="#ff888888"
                android:textSize="@dimen/textSize_28pt" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>