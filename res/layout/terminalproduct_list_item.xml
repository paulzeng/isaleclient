<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="4dp">

    <TextView
        android:id="@+id/tv_terminalname"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/v2_list_item_selector_white"
        android:drawableLeft="@drawable/v2_icon_terminalproduct"
        android:drawablePadding="15dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="苏宁电器莫干山路店"
        android:textColor="@color/v2_text"
        android:textSize="@dimen/textSize_32pt" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/divider_1px"
        android:background="@color/v2_divider" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/v2_list_item_selector_white"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <LinearLayout
            android:id="@+id/ll_product1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="15dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_productname1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="TCL笔记本"
                android:textColor="@color/v2_text_light"
                android:textSize="@dimen/textSize_30pt" />

            <TextView
                android:id="@+id/tv_intoterminaldate1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2014-08-08"
                android:textColor="@color/v2_text_light"
                android:textSize="@dimen/textSize_26pt" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_product2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="15dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_productname2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="ThinkPad x240笔记本"
                android:textColor="@color/v2_text_light"
                android:textSize="@dimen/textSize_30pt" />

            <TextView
                android:id="@+id/tv_intoterminaldate2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2014-09-18"
                android:textColor="@color/v2_text_light"
                android:textSize="@dimen/textSize_26pt" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_product3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="15dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_productname3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Dell外星人笔记本"
                android:textColor="@color/v2_text_light"
                android:textSize="@dimen/textSize_30pt" />

            <TextView
                android:id="@+id/tv_intoterminaldate3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2014-12-08"
                android:textColor="@color/v2_text_light"
                android:textSize="@dimen/textSize_26pt" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_product_more"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="......"
            android:textColor="@color/v2_text_light"
            android:textSize="@dimen/textSize_30pt"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/divider_1px"
        android:background="@color/v2_divider" />

    <TextView
        android:id="@+id/tv_product_total"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@drawable/v2_list_item_selector_white"
        android:gravity="right|center_vertical"
        android:paddingRight="20dp"
        android:text="共 5 项商品"
        android:textColor="@color/v2_text"
        android:textSize="@dimen/textSize_26pt" />
</LinearLayout>