<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/v2_background"
    android:orientation="vertical"
    android:padding="4dp">

    <TextView
        android:id="@+id/tv_terminalname"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/v2_list_item_selector_white"
        android:drawableLeft="@drawable/v2_icon_terminal"
        android:drawablePadding="15dp"
        android:drawableRight="@drawable/v2_icon_terminal_edit"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:paddingRight="6dp"
        android:singleLine="true"
        android:text="PRADA专卖店"
        android:textColor="@color/v2_text"
        android:textSize="@dimen/textSize_32pt" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/divider_1px"
        android:background="@color/v2_divider" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/v2_list_item_selector_white"
        android:paddingLeft="1dp"
        android:paddingRight="6dp"
        android:paddingTop="13dp"
        android:shrinkColumns="0,1">

        <TableRow>

            <TextView
                android:id="@+id/tv_terminalman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/v2_icon_terminal_phone"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="杨白杨白杨白杨白杨白杨白杨白杨白杨白杨白杨白杨白杨白杨白杨白杨白杨白杨白"
                android:textColor="@color/v2_text"
                android:textSize="@dimen/textSize_32pt" />

            <TextView
                android:id="@+id/tv_terminalphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:paddingLeft="25dp"
                android:singleLine="true"
                android:text="18080808668180808086"
                android:textColor="@color/v2_text_light"
                android:textSize="@dimen/textSize_30pt" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/tv_terminaladdress"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/v2_list_item_selector_white"
        android:drawableLeft="@drawable/v2_icon_terminal_location"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:paddingBottom="14dp"
        android:paddingLeft="1dp"
        android:paddingRight="6dp"
        android:paddingTop="5dp"
        android:singleLine="true"
        android:text="浙江省延安路888号"
        android:textColor="@color/v2_text_light"
        android:textSize="@dimen/textSize_30pt" />

</LinearLayout>