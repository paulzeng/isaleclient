<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/v2_background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <com.zjrc.isale.client.ui.widgets.pulltorefreshview.PullToRefreshListView
            android:id="@+id/lv_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:cacheColorHint="#00000000"
            android:clickable="true"
            android:divider="@android:color/transparent"
            android:dividerHeight="@dimen/divider_1px"
            android:focusable="true"
            android:listSelector="@drawable/v2_list_item_selector_transparent" />

        <include
            android:id="@+id/ll_listview_foreground"
            layout="@layout/listview_foreground"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>