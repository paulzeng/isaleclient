<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rl_bottom"
        android:layout_alignParentTop="true" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dip"
            android:layout_marginRight="6dip" >

            <RelativeLayout
                android:id="@+id/rl_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:paddingTop="10dp" >

                <View
                    android:layout_width="325dp"
                    android:layout_height="1dp"
                    android:layout_below="@+id/tv_add_time"
                    android:layout_marginTop="10dp"
                    android:background="@color/v2_gray_e2e2e2" >
                </View>

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/v2_gray_353535"
                    android:textSize="@dimen/textSize_36pt"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_add_time"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/tv_title"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/v2_gray_888888"
                    android:textSize="@dimen/textSize_26pt" />

                <TextView
                    android:id="@+id/tv_state"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_below="@id/tv_title"
                    android:layout_marginLeft="25dp"
                    android:layout_toRightOf="@id/tv_add_time"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/v2_red"
                    android:textSize="@dimen/textSize_26pt" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_place"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_title"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="15dp" >

                <TextView
                    android:id="@+id/tv_place_title"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="10.0dip"
                    android:gravity="center_vertical"
                    android:text="目的地："
                    android:textColor="@color/v2_gray_888888"
                    android:textSize="@dimen/textSize_32pt" />

                <TextView
                    android:id="@+id/tv_place"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="10.0dip"
                    android:layout_toRightOf="@id/tv_place_title"
                    android:gravity="center_vertical"
                    android:textColor="@color/v2_gray_353535"
                    android:textSize="@dimen/textSize_32pt" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_begin_date"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_place"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="15dp" >

                <TextView
                    android:id="@+id/tv_begin_date_title"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="10.0dip"
                    android:gravity="center_vertical"
                    android:text="计划开始日期："
                    android:textColor="@color/v2_gray_888888"
                    android:textSize="@dimen/textSize_32pt" />

                <TextView
                    android:id="@+id/tv_begin_date"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="10.0dip"
                    android:layout_toRightOf="@id/tv_begin_date_title"
                    android:gravity="center_vertical"
                    android:textColor="@color/v2_gray_353535"
                    android:textSize="@dimen/textSize_32pt" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_end_date"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_begin_date"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="15dp" >

                <TextView
                    android:id="@+id/tv_end_date_title"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="10.0dip"
                    android:gravity="center_vertical"
                    android:text="计划结束日期："
                    android:textColor="@color/v2_gray_888888"
                    android:textSize="@dimen/textSize_32pt" />

                <TextView
                    android:id="@+id/tv_end_date"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="10.0dip"
                    android:layout_toRightOf="@id/tv_end_date_title"
                    android:gravity="center_vertical"
                    android:textColor="@color/v2_gray_353535"
                    android:textSize="@dimen/textSize_32pt" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_travel_days"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_end_date"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="15dp" >

                <TextView
                    android:id="@+id/tv_travel_days_title"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="10.0dip"
                    android:gravity="center_vertical"
                    android:text="计划差旅天数："
                    android:textColor="@color/v2_gray_888888"
                    android:textSize="@dimen/textSize_32pt" />

                <TextView
                    android:id="@+id/tv_travel_days"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="10.0dip"
                    android:layout_toRightOf="@id/tv_travel_days_title"
                    android:gravity="center_vertical"
                    android:textColor="@color/v2_gray_353535"
                    android:textSize="@dimen/textSize_32pt" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_travel_reason"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_travel_days"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="15dp" >

                <TextView
                    android:id="@+id/tv_travel_reason_title"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="10.0dip"
                    android:gravity="center_vertical"
                    android:text="差旅缘由："
                    android:textColor="@color/v2_gray_888888"
                    android:textSize="@dimen/textSize_32pt" />

                <TextView
                    android:id="@+id/tv_travel_reason"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="10.0dip"
                    android:layout_toRightOf="@id/tv_travel_reason_title"
                    android:gravity="center_vertical"
                    android:textColor="@color/v2_gray_353535"
                    android:textSize="@dimen/textSize_32pt" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_travel_man"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_travel_reason"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="15dp" >

                <TextView
                    android:id="@+id/tv_travel_man_title"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="10.0dip"
                    android:gravity="center_vertical"
                    android:text="差旅人员："
                    android:textColor="@color/v2_gray_888888"
                    android:textSize="@dimen/textSize_32pt" />

                <TextView
                    android:id="@+id/tv_travel_man"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="10.0dip"
                    android:layout_toRightOf="@id/tv_travel_man_title"
                    android:gravity="center_vertical"
                    android:textColor="@color/v2_gray_353535"
                    android:textSize="@dimen/textSize_32pt" />
            </RelativeLayout>

            <View
                android:id="@+id/line_2"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/rl_travel_man"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="15dp"
                android:background="@color/v2_divider" >
            </View>

            <RelativeLayout
                android:id="@+id/rl_audit_man"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line_2"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="15dp" >

                <TextView
                    android:id="@+id/tv_audit_man_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="10.0dip"
                    android:gravity="center_vertical"
                    android:text="审批人："
                    android:textColor="@color/v2_gray_888888"
                    android:textSize="@dimen/textSize_32pt" />

                <TextView
                    android:id="@+id/tv_audit_man"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10.0dip"
                    android:layout_toRightOf="@id/tv_audit_man_title"
                    android:gravity="center_vertical"
                    android:textColor="@color/v2_gray_353535"
                    android:textSize="@dimen/textSize_32pt" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_state"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_audit_man"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="15dp" >

                <TextView
                    android:id="@+id/tv_state_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="10.0dip"
                    android:gravity="center_vertical"
                    android:text="审批状态："
                    android:textColor="@color/v2_gray_888888"
                    android:textSize="@dimen/textSize_32pt" />

                <TextView
                    android:id="@+id/tv_sign_state"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10.0dip"
                    android:layout_toRightOf="@id/tv_state_title"
                    android:gravity="center_vertical"
                    android:textColor="@color/v2_gray_353535"
                    android:textSize="@dimen/textSize_32pt" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_result"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_state"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="15dp" >

                <TextView
                    android:id="@+id/tv_result_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="10.0dip"
                    android:gravity="center_vertical"
                    android:text="审批详情："
                    android:textColor="@color/v2_gray_888888"
                    android:textSize="@dimen/textSize_32pt" />

                <TextView
                    android:id="@+id/tv_result"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10.0dip"
                    android:layout_toRightOf="@id/tv_result_title"
                    android:gravity="center_vertical"
                    android:textColor="@color/v2_gray_353535"
                    android:textSize="@dimen/textSize_32pt" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_alignParentBottom="true"
        android:background="@color/white" >

        <View
            android:id="@+id/ll_bottom_devider"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/v2_divider" >
        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="0dp"
                android:layout_height="40dip"
                android:layout_weight="1"
                                android:background="@drawable/v2_btn_works"
                android:textColor="@color/v2_gray_555555"
                android:text="修改"
                android:textSize="@dimen/textSize_30pt"
                android:textStyle="normal" />

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="40dip"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="删除"
                 android:background="@drawable/v2_btn_works"
                android:textColor="@color/v2_gray_555555"
                android:textSize="@dimen/textSize_30pt"
                android:textStyle="normal" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>