<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="10dip"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pull_to_refresh_image"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/pulltorefresh_up_arrow" />

        <TextView
            android:id="@+id/pull_to_refresh_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="@string/pull_to_refresh_pull_down_label"
            android:textColor="@color/v2_gray_999999"
            android:textSize="@dimen/textSize_20pt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pull_to_refresh_progress"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/v2_progress"
            android:visibility="gone" />

        <TextView
            android:id="@+id/pull_to_refresh_progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="@string/pull_to_refresh_pull_down_label"
            android:textColor="@color/v2_gray_999999"
            android:textSize="@dimen/textSize_20pt"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>